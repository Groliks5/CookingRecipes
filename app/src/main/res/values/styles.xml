<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SavingRecipeTextStyle" parent="DialogTextStyle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CancelButtonStyle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DialogCardViewStyle">
        <item name="cardCornerRadius">15dp</item>
        <item name="contentPadding">32dp</item>
        <item name="cardBackgroundColor">@color/light_grey</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="RecyclerViewCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardBackgroundColor">@color/light_grey</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="RecipeControlButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/recipe_control_button_color_selector</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="EditRecipeButtonStyle" parent="RecipeControlButtonStyle">
        <item name="iconTint">@color/brown</item>
    </style>

    <style name="DeleteRecipeButtonStyle" parent="RecipeControlButtonStyle">
        <item name="iconTint">@color/dark_blue</item>
    </style>

    <style name="FavouriteRecipeButtonStyle" parent="RecipeControlButtonStyle">
        <item name="iconTint">@color/red</item>
    </style>

    <style name="DownloadRecipeButtonStyle" parent="RecipeControlButtonStyle">
        <item name="iconTint">@color/black</item>
    </style>

    <style name="RecipePhotoStyle">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommonButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="FilterCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/light_grey</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="DeleteFilterButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="icon">@drawable/ic_delete_filter</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">end</item>
        <item name="paddingStart">0dp</item>
    </style>

    <style name="FilterTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/light_blue</item>
    </style>
</resources>