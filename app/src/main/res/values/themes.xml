<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CookingRecipes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/black</item>
        <item name="cardBackgroundColor">@color/light_grey</item>
        <!-- Dialog attributes -->
        <item name="dialogCardBackgroundColor">@color/light_grey</item>
        <!-- Recipes list attributes -->
        <item name="recyclerViewRecipeCardBackgroundColor">@color/light_grey</item>
        <item name="recyclerViewRecipeControlButtonBackgroundColor">@color/white</item>
        <item name="recyclerViewRecipeControlButtonRippleColor">
            @color/recipe_control_button_color_light_selector
        </item>
        <!-- Filters attributes -->
        <item name="recyclerViewFilterCardBackgroundColor">@color/light_grey</item>
    </style>
</resources>